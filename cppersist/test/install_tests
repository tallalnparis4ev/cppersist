if ! [ -d "./libs" -a ! -h "./libs" ]
then
        mkdir libs
	./google_build
fi
if ! [ -d "./build" -a ! -h "./build" ]
then
        mkdir build
fi

cd build
rm cmake_install.cmake Makefile CMakeCache.txt
rm -rf bin _deps lib CMakeFiles
cmake -DCMAKE_BUILD_TYPE=Debug -DOPENSSL_ROOT_DIR=/usr/local/opt/openssl ..
make
mv tests ../run_tests
